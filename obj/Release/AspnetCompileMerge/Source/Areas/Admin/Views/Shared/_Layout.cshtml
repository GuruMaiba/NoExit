<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title – NoExit</title>
    <link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a id="logo_header" class="navbar-brand" style="padding:0px; margin-left:0" href="@Url.Action("Index", "Home",new { area=""})">
                    <img style="height:50px" src="@Url.Content("~/Content/Images/logo.png")" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="@(ViewBag.Title=="Список заявок"?"background-color:#fccf21":"")">@Html.ActionLink("Заявки", "Index", "QuestRequests")</li>
                    <li style="@(ViewBag.Title=="Список сеансов Апокалипсис"?"background-color:#fccf21":"")">@Html.ActionLink("Апокалипсис", "Index", "Quests", new {questId = 1}, null)</li>
                    <li style="@(ViewBag.Title=="Список сеансов Шизофрения"?"background-color:#fccf21":"")">@Html.ActionLink("Шизофрения", "Index", "Quests", new {questId = 2}, null)</li>
                    <li style="@(ViewBag.Title=="Список сеансов Silent Hill"?"background-color:#fccf21":"")">@Html.ActionLink("Silent Hill", "Index", "Quests", new { questId = 3 }, null)</li>
                    @*<li>@Html.ActionLink("Контакты", "Contact", "Home")</li>*@
                </ul>
            </div>
        </div>
    </div>
<div class="body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year – NoExitGames</p>
    </footer>
</div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
